@model List<OsnTestApp.Data.Student>

@{
    <h1>Students</h1>
    <table class="table">
        <thead>
            <tr>
                <th>Name</th>
                <th>Date of Birth</th>
                <th>Address</th>
                <th>Phone</th>
                <th>Email</th>
                <th>Parent Name</th>
                <th>Parent Address</th>
                <th>Parent Phone</th>
                <th>Parent Email</th>
                <th> </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var student in Model)
            {
                <tr>
                    <td>@student.Name</td>
                    <td>@student.DateOfBirth</td>
                    <td>@student.Address</td>
                    <td>@student.Phone</td>
                    <td>@student.Email</td>
                    <td>@student.Parent.Name</td>
                    <td>@student.Parent.Address</td>
                    <td>@student.Parent.Phone</td>
                    <td>@student.Parent.Email</td>
                    <td><a href="Student/View/@student.Id">View</a></td>
                    <td>
                        <table class="table">
                            <thead>
                                <tr>
                                    <th>Subject</th>
                                    <th>Term</th>
                                    <th>Mark</th>
                                    <th>Absent</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var mark in student.Marks)
                                {
                                    <tr>
                                        <td>@mark.SubjectName</td>
                                        <td>@mark.Term</td>
                                        <td>@mark.Mark</td>
                                        <td>@mark.IsAbsent</td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
